<li class="card p-1">
  <span>
    <%= link_to post.title, user_post_path(@user, post), class: 'text-decoration-none' %>
  </span>
  <span><%= post.text %></span>
  <span class="text-end">
    <span>Comments: <%= post.comments_counter %></span>,
    <span>Likes: <%= post.likes_counter %></span>
  </span>
  <% if can? :destroy, post %>
    <%= link_to 'delete',[post.author, post], data: {
      turbo_method: :delete,
      turbo_confirm: 'Are you sure'
    }, class: 'btn btn-outline-danger btn-sm align-self-start' %>
  <% end %>
</li>