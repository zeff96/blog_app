<li class="card p-1">
  <p><%= post.title %></p>
  <p><%= post.text %></p>
  <p class="text-end">
    <span>Comments: <%= post.comments_counter %></span>,
    <span>Likes: <%= post.likes_counter %></span>
  </p>
  <%= link_to 'delete', user_posts_path(post.author, post), data: {
    turbo_method: :delete,
    turbo_confirm: 'Are you sure'
  } %>
</li>