<div class="d-flex align-items-center gap-3">
  <div style="width: 70px">
    <% if user.photo.present? %>
      <%= image_tag user.photo, alt: user.name, class: "border border-2 p-2 img-fluid" %>
    <% else %>
      <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/thumb/b/b5/Windows_10_Default_Profile_Picture.svg/2048px-Windows_10_Default_Profile_Picture.svg.png", alt: user.name, class: "border border-2 p-2 img-fluid" %>
    <% end %>
  </div>
  <h2 class="card flex-fill p-3">
    <span class="d-block">
      <%= link_to user.name, user, class: 'nav-link', 'data-user-id': 'users' %>
    </span>
    <span class="text-end fs-6">
    Number of posts: <%= user.post_counter %>
    </span>
  </h2>
</div>