<section>
  <%= render 'partials/users', user: @user %>
  <div>
    <ul>
      <% @posts.each do |post| %>
        <%= link_to user_post_path(post.author, post) do %>
          <%= render 'partials/posts', post: post %>
        <% end %>
        <ul>
          <% post.recent_five_comments.each do |comment| %>
            <%= render 'partials/comments', comment: comment %>
          <% end %>
        </ul>
      <% end %>
    </ul>
  </div>
  <button type="button">Pagination</button>
</section>

