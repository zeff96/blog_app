<div>
  <h2><%= @post.title %> by <%= @post.author.name %></h2>
  <p><%= @post.text %></p>
  <div>
    <span>Comments: <%= @post.comments_counter %></span>,
    <span>Likes: <%= @post.likes_counter %></span>
  </div>
  <ul>
    <% @post.comments.each do |comment| %>
      <%= render 'partials/comments', comment: comment %>
    <% end %>
  </ul>
</div>