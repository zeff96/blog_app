<%= form_with model: [current_user, @post] do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control mb-3" %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control mb-3" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-outline-secondary" %>
  </div>
<% end %>