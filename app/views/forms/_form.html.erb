<%= form_with model: [@user, @user.posts.build] do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control mb-3" %>
  </div>

  <div>
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control mb-3" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>